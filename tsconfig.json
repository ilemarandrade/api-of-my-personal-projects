{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "lib": ["es2015"],
  "include": ["src/**/*"]
}
